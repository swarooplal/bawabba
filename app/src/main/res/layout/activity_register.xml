<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.bawaaba.rninja4.rookie.activity.RegisterActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/background_repeat"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Create Bawabba Profile"
                            android:textColor="#fff"
                            android:textSize="18sp" />

                    </LinearLayout>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.AppBarLayout>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/fab_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:orientation="vertical"
            android:visibility="gone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="160dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/fb"
            android:visibility="invisible"
            app:backgroundTint="#2196f3"
            app:elevation="9dp"
            app:pressedTranslationZ="12dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="90dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/linkedin"
            android:visibility="invisible"
            app:backgroundTint="#2196f3"
            app:elevation="9dp"
            app:pressedTranslationZ="12dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/add_more"
            app:backgroundTint="#2196f3"
            app:borderWidth="0dp"
            app:elevation="10dp"
            app:fabSize="normal"
            app:pressedTranslationZ="12dp" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:scrollbarSize="2dp"
        android:scrollbars="vertical"
        >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/hire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#F9F9F9"
                        android:text="Hire"
                        android:textColor="#FFF"
                        android:textSize="13sp" />

                    <RadioButton
                        android:id="@+id/freelance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#F9F9F9"
                        android:checked="true"
                        android:text="Work"
                        android:textColor="#FFF"
                        android:textSize="13sp"

                        />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvHire"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/reg_box_hirer"
                        android:gravity="center"
                        android:text="Hire"
                        android:textSize="18sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvWork"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/register_box"
                        android:gravity="center"
                        android:text="Work"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/fullname"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangular_edit2"
                    android:contextClickable="true"
                    android:fontFamily="sans-serif"
                    android:hint="@string/hint_name"
                    android:inputType="textCapWords"
                    android:paddingLeft="10dp"
                    android:textColor="#7E7E7E"
                    android:textColorHint="#7E7E7E"
                    android:textSize="14sp" />
                <!--</android.support.design.widget.TextInputLayout>-->
                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:orientation="vertical">-->


                <!--</android.support.design.widget.TextInputLayout>-->

                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:orientation="vertical">-->

                <!--</android.support.design.widget.TextInputLayout>-->

                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:orientation="vertical">-->

                <EditText
                    android:id="@+id/email"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangular_edit2"
                    android:fontFamily="sans-serif"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:textAllCaps="false"
                    android:textColor="#7E7E7E"
                    android:textColorHint="#7E7E7E"
                    android:textSize="14sp" />

                <!--</android.support.design.widget.TextInputLayout>-->

                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:orientation="vertical">-->
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectanguaredit"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="#7E7E7E"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#7E7E7E">

                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/rectangular_edit2"
                            android:fontFamily="sans-serif"
                            android:hint="@string/hint_password"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            android:textColor="#7E7E7E"
                            android:textColorHint="#7E7E7E"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectanguaredit"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="#7E7E7E"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#7E7E7E">

                        <EditText
                            android:id="@+id/confirm_password"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/rectangular_edit2"
                            android:fontFamily="sans-serif"
                            android:hint="Confirm Password"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            android:textColor="#7E7E7E"
                            android:textColorHint="#7E7E7E"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/dob"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangular_edit2"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="sans-serif"
                    android:hint="Date of Birth"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#7E7E7E"
                    android:textColorHint="#7E7E7E"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/place"
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/rectangular_edit2"
                        android:focusableInTouchMode="false"
                        android:gravity="left|center"
                        android:hint="Location"
                        android:onClick="findPlace"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#7E7E7E"
                        android:textColorHint="#7E7E7E"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/proof_button"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:background="#36a9e7"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/placeholder"
                        android:tint="@color/white" />
                </LinearLayout>


                <EditText
                    android:id="@+id/description"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangular_edit2"
                    android:fontFamily="sans-serif"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:paddingBottom="60dp"
                    android:paddingLeft="10dp"
                    android:textColor="#7E7E7E"
                    android:textColorHint="#7E7E7E"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <!--<Button-->
                <!--android:id="@+id/Button01"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:text="@+id/Button01"></Button>-->
                <!--</LinearLayout>-->
                <!--</android.support.design.widget.TextInputLayout>-->
                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="#7E7E7E"
                        android:checked="true"
                        android:text="Male"
                        android:textColor="#7E7E7E"
                        android:textSize="13sp" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="#7E7E7E"
                        android:text="Female"
                        android:textColor="#7E7E7E"
                        android:textSize="13sp" />
                </RadioGroup>

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/new_button"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <!--<Button-->
                <!--android:id="@+id/btnReg_hire"-->
                <!--android:layout_width="150dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:background="@drawable/new_button"-->
                <!--android:text="SignUP"-->
                <!--android:textAllCaps="false"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="15dp"-->
                <!--android:textStyle="normal" />-->


                <TextView
                    android:id="@+id/btnLinkToLoginScreen"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/btn_link_to_login"
                    android:textAllCaps="false"
                    android:textColor="#7E7E7E"
                    android:textSize="15sp" />


            </LinearLayout>

    </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>


