<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_edit_audio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="15dp"
            android:gravity="center"
            android:text="Edit Audio"
            android:textStyle="bold"
            android:textColor="#000"/>


        <TextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:text="File Name"
            />
        <EditText
            android:id="@+id/audio_titlename"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/rectangular_edit2"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColorHint="#000"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:textColor="#000"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/Audio_save"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:background="@drawable/button_review"
            android:fontFamily="sans-serif"
            android:text="Save"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/hidden_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        </LinearLayout>
</LinearLayout>