<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/profreliative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:background="@drawable/halfbackground"
        android:layout_height="200dp" >
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layoutTop" >
    </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/layout_divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:layout_anchor="@id/layout_divider"
        android:id="@+id/android"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#000"
            android:textSize="13dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="150dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/edit_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT DETAILS"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#2196F3"
                android:textSize="13dp" />



            <!--<TextView-->
                <!--android:id="@+id/desc"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:fontFamily="sans-serif"-->
                <!--android:textColor="@color/lbl_name"-->
                <!--android:textSize="15dp" />-->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:divider="?android:dividerHorizontal"
    android:showDividers="middle"
    >



    <TabHost xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </TabHost>



                <TabHost xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/mySecondTabhost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <TabWidget
                            android:id="@android:id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                </TabHost>

                    <TabHost xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/myThirdTabhost"
                        android:layout_width="match_parent"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TabWidget
                                android:id="@android:id/tabs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />


                            <FrameLayout
                                android:id="@android:id/tabcontent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </TabHost>

    <TextView
        android:id="@+id/no_portfolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Portfolio Sections!!!"
        android:textStyle="italic"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="#2196F3"
        android:textSize="13dp" />


    <TabHost xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/myFourthTabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:backgroundTint="#87CEFA"
            app:pressedTranslationZ="12dp"
            android:layout_marginBottom="10dp"
            app:borderWidth="0dp"
            app:elevation="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/add_more" />
        <TextView
            android:id="@+id/edit_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT REVIEWS POSTED BY ME"
            android:textStyle="italic"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#2196F3"
            android:textSize="13dp" />
    </TabHost>
</LinearLayout>

        </LinearLayout>




        <!--<Button-->
                <!--android:id="@+id/btnLogout"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="bottom"-->
                <!--android:layout_marginBottom="50dp"-->
                <!--android:background="@drawable/button"-->
                <!--android:text="@string/btn_logout" />-->
        </LinearLayout>

</ScrollView>

    <RelativeLayout
        android:id="@+id/fab_family"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="#000"
        android:orientation="vertical"
        android:visibility="gone"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/layoutTop"
        app:backgroundTint="#2196F3"
        app:elevation="5dp"
        android:layout_margin="40dp"
        app:borderWidth="0dp"
        android:src="@drawable/share_profile"
        app:layout_anchorGravity="bottom|left|end" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/layoutTop"
        app:backgroundTint="#ff6700"
        app:elevation="5dp"
        android:layout_margin="40dp"
        android:src="@drawable/message_contact"
        app:layout_anchorGravity="bottom|right|end" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/layoutTop"
            app:backgroundTint="#ff6700"
            app:elevation="5dp"
            android:layout_margin="40dp"
            android:src="@drawable/setting_new"
            app:layout_anchorGravity="bottom|right|end" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#fff"
        app:menu="@menu/bottom_navigation"
        />

</android.support.design.widget.CoordinatorLayout>
