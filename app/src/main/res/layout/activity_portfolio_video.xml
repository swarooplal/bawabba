<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    tools:context="com.bawaaba.rninja4.rookie.activity.portfolioTab.PortfolioVideo">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/port_videos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="8dp"
        android:paddingTop="1dp"
        android:scrollbars="vertical"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/video_count"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:gravity="top|center"
        android:textAllCaps="false"
        android:text="No videos added yet."
        android:textSize="15sp"
        android:textColor="#FF666666"  />

    <LinearLayout
        android:id="@+id/llEditvideo"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tveditVideos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="EDIT VIDEOS"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="#0083C9" />

    </LinearLayout>
</RelativeLayout>


