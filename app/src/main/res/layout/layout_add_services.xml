<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="right|top"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:src="@drawable/cross"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etTittle"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            android:maxLength="50"
            android:background="@drawable/grey_box"
            android:textSize="15sp"
            android:inputType="textCapSentences"
            android:hint="Title"
            android:paddingLeft="5dp"
            android:textColor="#FF666666"
            android:textColorHint="#FF666666" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/RelativeLayout1"
            android:layout_width="160dp"
            android:background="@drawable/grey_box"
            android:orientation="horizontal"
            android:layout_height="40dp">


            <!--<LinearLayout-->
                <!--android:layout_width="10dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:orientation="horizontal"-->
                <!--android:background="@drawable/spinner_box"-->
                <!--android:layout_weight="1">-->

            <LinearLayout
                android:id="@+id/drop_layout"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/spinner_box"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinnerCurrany"
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:spinnerMode="dialog"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_box"
                    />

                <ImageView
                    android:id="@+id/drop_id"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center"
                    android:background="@drawable/dropdown" />

            </LinearLayout>


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etAmount"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="15sp"
                android:background="@drawable/gredit_box"
                android:gravity="center"
                android:hint="xxx"
                android:textColor="#FF666666"
                android:textColorHint="#FF666666"/>
        </LinearLayout>

    </LinearLayout>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLength="250"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/grey_box"
        android:gravity="top"
        android:hint="Short description of services"
        android:inputType="textCapSentences|textMultiLine"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="#FF666666"
        android:textColorHint="#FF666666"
        android:textSize="15sp" />
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:layout_height="1dp"
        android:background="#EDEDED" />
</LinearLayout>



